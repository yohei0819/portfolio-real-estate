// ==========================================
// リセット・ベーススタイル
// ==========================================

*
*::before
*::after
  margin 0
  padding 0
  box-sizing border-box

html
  font-size 100%  // ブラウザデフォルト（通常16px）を尊重し、ユーザー設定を反映
  scroll-behavior smooth
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  font-family $font-family
  font-size $font-size-base
  color $text-dark
  background $bg-white
  line-height 1.6
  min-height 100vh
  overflow-x hidden

a
  color inherit
  text-decoration none

ul
ol
  list-style none

img
  max-width 100%
  height auto
  vertical-align bottom

button
  font-family inherit
  cursor pointer
  border none
  background none

input
select
textarea
  font-family inherit
  font-size inherit

table
  border-collapse collapse
  border-spacing 0

h1, h2, h3, h4, h5, h6
  font-weight bold
  line-height 1.4

// スクリーンリーダー用
.sr-only
  position absolute
  width 1px
  height 1px
  padding 0
  margin -1px
  overflow hidden
  clip rect(0, 0, 0, 0)
  border 0

// ページロード時のアニメーション用
// ※ GSAPが制御するためCSSトランジションは設定しない
// 値は GSAP の fromTo({ y: 40 }) と一致させること
.js-fade-in
  opacity 0
  transform translateY(40px)
  will-change opacity, transform

// ==========================================
// フォーカスリング（キーボード操作時のみ表示）
// ==========================================

:focus-visible
  outline 2px solid $primary
  outline-offset 2px

// フォーカスリングが不要な要素（マウス操作時）
:focus:not(:focus-visible)
  outline none

// ==========================================
// 無効リンク（aria-disabled）
// ※ 未実装のナビ項目等に使用。クリック・フォーカスを無効化
// ==========================================

[aria-disabled="true"]
  pointer-events none
  cursor default
  opacity 0.6

// ==========================================
// スキップナビゲーション
// ==========================================

.skip-nav
  position fixed
  top -100%
  left 16px
  z-index 10001
  background $primary
  color #fff
  padding 12px 24px
  border-radius 0 0 $border-radius $border-radius
  font-size $font-size-base
  font-weight bold
  text-decoration none
  transition top 0.2s ease

  &:focus
    top 0

