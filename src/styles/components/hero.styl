// ==========================================
// ヒーローセクション
// ==========================================

.hero
  position relative
  height 560px
  overflow hidden
  page-offset()

  +sp()
    height 400px

  &__bg
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__slide
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    transition opacity 1s ease
    background-size cover
    background-position center

    &.is-active
      opacity 1

    &--1
      background-color #f0e0e5
      background-image linear-gradient(135deg, #fce4ec 0%, #f8bbd0 100%)

    &--2
      background-color #e5e0f0
      background-image linear-gradient(135deg, #e8eaf6 0%, #c5cae9 100%)

    &--3
      background-color #e0f0e5
      background-image linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%)

  &__overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background linear-gradient(to bottom, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.3) 100%)
    z-index 1

  &__content
    position relative
    z-index 2
    container()
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    text-align center
    color #fff

  &__title
    font-size 42px
    font-weight bold
    text-shadow 0 2px 8px rgba(0, 0, 0, 0.3)
    margin-bottom 16px
    letter-spacing 2px
    // GSAP fromTo で制御するため初期非表示（ScrollAnimations.js #parallaxHero 参照）
    opacity 0

    +sp()
      font-size 28px

  &__subtitle
    font-size $font-size-xl
    text-shadow 0 1px 4px rgba(0, 0, 0, 0.3)
    margin-bottom 32px
    // GSAP fromTo で制御するため初期非表示
    opacity 0

    +sp()
      font-size $font-size-base

  &__search
    background rgba(255, 255, 255, 0.95)
    border-radius $border-radius-lg
    padding 24px 32px
    width 100%
    max-width 700px
    box-shadow $shadow-lg
    // GSAP fromTo で制御するため初期非表示
    opacity 0

    +sp()
      padding 16px

  &__search-title
    color $primary
    font-size $font-size-lg
    font-weight bold
    margin-bottom 16px
    text-align left

  &__search-form
    display flex
    gap 12px

    +sp()
      flex-direction column

  &__search-select
    custom-select()
    flex 1
    padding 12px 16px
    border-width 2px
    color $text-dark

  &__search-btn
    btn-base()
    background $primary
    color #fff
    padding 12px 32px
    font-size $font-size-base
    font-weight bold
    border-radius $border-radius

    &:hover
      background $primary-dark

  // スライドインジケーター
  &__indicators
    position absolute
    bottom 24px
    left 50%
    transform translateX(-50%)
    z-index 3
    display flex
    gap 10px

    +sp()
      bottom 8px
      display none

  &__indicator
    width 10px
    height 10px
    border-radius 50%
    background rgba(255, 255, 255, 0.5)
    cursor pointer
    transition all $transition-base
    // タッチターゲット拡大（視覚サイズを変えずヒット領域を確保）
    position relative

    &::before
      content ''
      position absolute
      top -17px
      left -17px
      right -17px
      bottom -17px

    &.is-active
      background #fff
      transform scale(1.2)
