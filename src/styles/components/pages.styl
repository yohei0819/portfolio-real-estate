// ==========================================
// パンくずリスト
// ==========================================

.breadcrumb
  background $bg-gray
  padding 12px 0
  border-bottom 1px solid $border-light
  page-offset()

  &__inner
    container()

  &__list
    display flex
    align-items center
    flex-wrap wrap
    gap 4px

  &__item
    font-size $font-size-sm
    color $text-gray

    a
      color $primary
      hover-opacity()

    &::after
      content '>'
      margin-left 8px
      color $text-light

    &:last-child
      color $text-dark
      &::after
        display none

// ==========================================
// 検索サイドバー
// ==========================================

.search-layout
  container()
  display grid
  grid-template-columns 240px 1fr
  gap 24px
  padding-top 24px
  padding-bottom 60px

  +sp()
    grid-template-columns 1fr
    gap 16px

.sidebar
  &__section
    background $bg-white
    border 1px solid $border-color
    border-radius $border-radius
    margin-bottom 16px
    overflow hidden

  &__title
    background $primary
    color #fff
    padding 10px 16px
    font-size $font-size-sm
    font-weight bold

  &__body
    padding 12px 16px

  &__list
    li
      margin-bottom 0

    a
      display block
      padding 8px 0
      border-bottom 1px solid $border-light
      font-size $font-size-sm
      color $text-dark
      hover-color()
      position relative
      padding-left 14px

      &::before
        content '▸'
        position absolute
        left 0
        color $primary
        font-size 10px

      &:last-child
        border-bottom none

  &__checkbox-list
    label
      display flex
      align-items center
      gap 8px
      padding 6px 0
      font-size $font-size-sm
      cursor pointer

      input[type="checkbox"]
        accent-color $primary
        width 16px
        height 16px

  &__btn
    btn-base()
    background $primary
    color #fff
    width 100%
    padding 10px
    font-size $font-size-sm
    font-weight bold
    margin-top 12px
    border-radius $border-radius

    &:hover
      background $primary-dark

  // ラベル（賃料・面積など）
  &__label
    font-size $font-size-sm
    color $text-light
    margin-bottom 8px

  // レンジ選択（下限〜上限）
  &__range
    display flex
    gap 4px
    align-items center
    margin-bottom 12px

  &__range-select
    flex 1
    padding 6px
    border 1px solid $border-color
    border-radius $border-radius
    font-size $font-size-sm

  &__area-select
    width 100%
    margin-bottom 12px

  &__range-separator
    font-size $font-size-sm
    color $text-gray

// ==========================================
// 物件一覧
// ==========================================

.property-list
  &__header
    flex-between()
    margin-bottom 20px
    padding-bottom 12px
    border-bottom 2px solid $primary

    +sp()
      flex-direction column
      gap 12px

  &__count
    font-size $font-size-lg

    span
      font-size $font-size-2xl
      font-weight bold
      color $primary

  &__sort
    display flex
    align-items center
    gap 8px

    &-label
      font-size $font-size-sm
      color $text-light

    select
      padding 6px 12px
      border 1px solid $border-color
      border-radius $border-radius
      font-size $font-size-sm

  &__items
    display flex
    flex-direction column
    gap 20px

  // 空状態メッセージ
  &__empty
    text-align center
    padding 60px 20px
    color $text-light
    font-size $font-size-base
    line-height 1.8

  // ローディング表示
  &__loading
    text-align center
    padding 60px 20px
    color $text-light
    font-size $font-size-base

// ==========================================
// 物件一覧カード（横型）
// ==========================================

.property-row
  card-base()
  position relative
  cursor pointer

  +sp()
    // SP ではスタックレイアウト
    display block

  &__link
    display grid
    grid-template-columns 280px 1fr
    color inherit
    text-decoration none

    +sp()
      grid-template-columns 1fr

  &__image
    width 100%
    height 100%
    min-height 200px
    background-size cover
    background-position center
    background-color $bg-gray
    position relative

    +sp()
      height 200px

  &__badge
    position absolute
    top 10px
    left 10px
    background $primary
    color #fff
    padding 3px 8px
    font-size 11px
    font-weight bold
    border-radius 3px

  &__body
    padding 20px

  &__name
    font-size $font-size-lg
    font-weight bold
    margin-bottom 8px
    color $text-dark

  &__address
    font-size $font-size-sm
    color $text-gray
    margin-bottom 12px

  &__specs
    display flex
    flex-wrap wrap
    gap 8px
    margin-bottom 12px

  &__spec
    display flex
    align-items center
    gap 4px
    font-size $font-size-sm
    color $text-dark

    &-label
      color $text-gray

  &__price-area
    display flex
    align-items baseline
    gap 12px
    padding-top 12px
    border-top 1px solid $border-light

  &__price
    &-num
      font-size $font-size-2xl
      font-weight bold
      color $primary

    &-unit
      font-size $font-size-sm
      color $text-gray

  &__sub-price
    font-size $font-size-sm
    color $text-gray

  &__features
    display flex
    flex-wrap wrap
    gap 6px
    margin-top 8px

  &__feature
    display inline-block
    padding 2px 8px
    border 1px solid $primary
    color $primary
    font-size 10px
    border-radius 3px

// ==========================================
// ページネーション
// ==========================================

.pagination
  display flex
  justify-content center
  align-items center
  gap 4px
  margin-top 40px

  &__item
    min-width 36px
    height 36px
    flex-center()
    border 1px solid $border-color
    border-radius $border-radius
    font-size $font-size-sm
    color $text-dark
    transition all $transition-fast

    &:hover
      border-color $primary
      color $primary

    &.is-active
      background $primary
      border-color $primary
      color #fff

    &--prev
    &--next
      padding 0 12px
      font-weight bold

    // 省略記号（...）— クリック不可
    &.pagination__ellipsis
      cursor default
      border none
      background none

      &:hover
        border-color transparent
        color $text-dark
