// ==========================================
// 物件詳細ページ
// ==========================================

.detail
  page-offset()

  // ヒーロー画像
  &__hero
    width 100%
    height 400px
    background linear-gradient(135deg, #f5e6d3, #e8d5c4)
    position relative
    flex-center()

    +sp()
      height 260px

  &__hero-text
    font-size $font-size-3xl
    color $text-light

  &__hero-badge
    position absolute
    top 20px
    left 20px
    background $primary
    color #fff
    padding 6px 16px
    border-radius $border-radius
    font-weight bold
    font-size $font-size-sm

  // 2カラムレイアウト
  &__inner
    container()
    display grid
    grid-template-columns 1fr 320px
    gap 32px
    margin-top -40px
    position relative
    z-index 1

    +sp()
      grid-template-columns 1fr
      margin-top 0

  // メインコンテンツ
  &__main
    background $bg-white
    border-radius $border-radius-lg
    box-shadow $shadow-md
    padding 32px

    +sp()
      padding 20px

  &__title
    font-size $font-size-2xl
    font-weight bold
    margin-bottom 8px

    +sp()
      font-size $font-size-xl

  &__address
    font-size $font-size-base
    color $text-gray
    margin-bottom 20px

  // 価格ボックス
  &__price-box
    display flex
    align-items baseline
    gap 8px
    padding 20px
    background $bg-pink
    border-radius $border-radius-lg
    margin-bottom 24px

    +sp()
      flex-wrap wrap

  &__price-num
    font-size 36px
    font-weight bold
    color $primary

    +sp()
      font-size 28px

  &__price-unit
    font-size $font-size-base
    color $text-gray

  &__price-sub
    font-size $font-size-sm
    color $text-light
    margin-left 16px

    +sp()
      margin-left 0
      flex-basis 100%

  // セクション見出し
  &__section-title
    section-underline()
    font-size $font-size-xl
    margin 32px 0 16px

    +sp()
      font-size $font-size-lg
      margin 24px 0 12px

  // 概要テーブル
  &__table
    width 100%
    border-collapse collapse
    margin-bottom 24px

    +sp()
      display block
      overflow-x auto
      -webkit-overflow-scrolling touch

    th
      background $bg-gray
      border 1px solid $border-color
      padding 10px 14px
      font-size $font-size-sm
      color $text-gray
      text-align left
      width 28%
      font-weight normal

      +sp()
        padding 8px 10px
        font-size $font-size-xs

    td
      border 1px solid $border-color
      padding 10px 14px
      font-size $font-size-base

      +sp()
        padding 8px 10px
        font-size $font-size-sm

  // 設備タグ
  &__features
    display flex
    flex-wrap wrap
    gap 8px
    margin-bottom 24px

  &__feature-tag
    display inline-block
    padding 5px 14px
    border 1px solid $primary
    color $primary
    border-radius 20px
    font-size $font-size-sm

  // ギャラリー
  &__gallery
    display grid
    grid-template-columns repeat(3, 1fr)
    gap 12px
    margin-bottom 24px

    +sp()
      grid-template-columns repeat(2, 1fr)

  &__gallery-item
    width 100%
    height 120px
    background $bg-gray
    border-radius $border-radius
    flex-center()
    color $text-light
    font-size $font-size-sm

  // 地図
  &__map
    width 100%
    height 250px
    background $border-color
    border-radius $border-radius-lg
    flex-center()
    color $text-light
    margin-bottom 24px

  // サイドバー
  &__sidebar
    position sticky
    top ($header-height + 20px)
    align-self start

    +sp()
      position static

  &__sidebar-box
    background $bg-white
    border-radius $border-radius-lg
    box-shadow $shadow-md
    padding 24px
    margin-bottom 16px

  &__sidebar-title
    font-size $font-size-lg
    font-weight bold
    margin-bottom 16px
    text-align center

  &__sidebar-btn
    btn-base()
    display block
    width 100%
    padding 14px
    border-radius $border-radius-pill
    font-size $font-size-base
    font-weight bold
    margin-bottom 10px

    &--primary
      background $primary
      color #fff

      &:hover
        background $primary-dark
        transform translateY(-2px)
        box-shadow $shadow-md

    &--secondary
      background $bg-white
      color $primary
      border 2px solid $primary

      &:hover
        background $bg-pink

  // サイドバー管理会社情報
  &__sidebar-company
    font-size $font-size-base
    font-weight bold
    margin-bottom 4px

  &__sidebar-info
    font-size $font-size-sm
    color $text-gray
    margin-bottom 4px

  // 類似物件
  &__similar
    container()
    padding-top 40px
    padding-bottom 60px

  &__similar-title
    section-underline()
    font-size $font-size-xl
    margin-bottom 24px

  &__similar-grid
    display grid
    grid-template-columns repeat(3, 1fr)
    gap 20px

    +sp()
      grid-template-columns 1fr
  // ==========================================
  // 初期費用シミュレーション
  // ==========================================

  &__cost-sim
    margin-bottom 24px

    table
      width 100%
      border-collapse collapse

      +sp()
        display block
        overflow-x auto
        -webkit-overflow-scrolling touch

      th
      td
        border 1px solid $border-color
        padding 10px 14px
        font-size $font-size-base

        +sp()
          padding 8px 10px
          font-size $font-size-sm

      th
        background $bg-gray
        text-align left
        width 40%
        font-weight normal
        color $text-gray

    // 合計行: .detail__cost-sim 内のセレクタ詳細度で !important 不要
    .detail__cost-total th
    .detail__cost-total td
      background $bg-pink
      font-weight bold
      color $primary

  &__cost-note
    font-size $font-size-sm
    color $text-light
    margin-top 8px

  // ==========================================
  // 間取り図
  // ==========================================

  &__floorplan
    margin-bottom 24px

  &__floorplan-image
    border 1px solid $border-color
    border-radius $border-radius-lg
    padding 24px
    background $bg-gray
    text-align center

  &__floorplan-label
    display block
    font-size $font-size-lg
    font-weight bold
    margin-bottom 16px
    color $text-dark

  &__floorplan-rooms
    display grid
    grid-template-columns repeat(3, 1fr)
    gap 12px

    +sp()
      grid-template-columns repeat(2, 1fr)

  &__floorplan-room
    padding 20px 12px
    border-radius $border-radius
    text-align center
    font-size $font-size-sm
    font-weight bold
    color $text-dark
    border 1px solid $border-color

    &--ldk
      background #fff8e5
      border-color #f0d98a
      grid-column span 2

      +sp()
        grid-column span 2

    &--bed
      background #e8f4fd
      border-color #a3d0f0

    &--bath
      background #e8f8f0
      border-color #90d4b0

    &--wc
      background #f0f0ff
      border-color #b0b0e8

    &--entrance
      background #f5f5f5
      border-color #d0d0d0

    &--balcony
      background #fff5f0
      border-color #f0c8a0
      grid-column span 3

      +sp()
        grid-column span 2

    span
      display block
      font-size 11px
      color $text-light
      font-weight normal
      margin-top 4px

  // ==========================================
  // 周辺施設情報
  // ==========================================

  &__nearby
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 24px
    margin-bottom 24px

    +sp()
      grid-template-columns 1fr
      gap 16px

  &__nearby-category
    background $bg-gray
    border-radius $border-radius-lg
    padding 20px

  &__nearby-category h4
    font-size $font-size-base
    font-weight bold
    margin-bottom 12px
    padding-bottom 8px
    border-bottom 2px solid $primary
    display flex
    align-items center
    gap 8px

  &__nearby-list
    list-style none
    padding 0
    margin 0

    li
      display flex
      justify-content space-between
      align-items center
      padding 8px 0
      border-bottom 1px solid $border-light
      font-size $font-size-sm

      &:last-child
        border-bottom none

  &__nearby-name
    color $text-dark

  &__nearby-distance
    color $text-light
    font-size 12px