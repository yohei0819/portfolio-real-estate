.property-card
  card-base()
  cursor pointer
  position relative

  &__badge
    badge-base()
    top 12px
    left 12px

    &--new
      background $primary

    &--recommended
      background $badge-recommended

  &__image
    width 100%
    height 200px
    background-size cover
    background-position center
    background-color $bg-gray
    position relative
    overflow hidden

    +sp()
      height 180px

    &::after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0, 0, 0, 0)
      transition background $transition-base

    &:hover::after
      background rgba(0, 0, 0, 0.1)

  &__body
    padding 16px

  &__price
    display flex
    align-items baseline
    gap 4px
    margin-bottom 8px

    &-num
      price-display()

    &-unit
      font-size $font-size-sm
      color $text-gray

  &__name
    font-size $font-size-base
    font-weight bold
    margin-bottom 8px
    text-ellipsis()

  &__details
    display flex
    flex-wrap wrap
    gap 6px
    margin-bottom 8px

  &__tag
    display inline-block
    padding 2px 8px
    background $bg-gray
    border-radius 3px
    font-size $font-size-xs
    color $text-gray

  &__location
    font-size $font-size-sm
    color $text-gray
    display flex
    align-items center
    gap 4px

  &__link
    text-decoration none
    color inherit
    display block

