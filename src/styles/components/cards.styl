.category-grid
  display grid
  grid-template-columns repeat(4, 1fr)
  gap 20px

  +tab()
    grid-template-columns repeat(3, 1fr)

  +sp()
    grid-template-columns repeat(2, 1fr)
    gap 12px

.category-card
  card-base()
  text-align center
  padding 24px 16px
  cursor pointer
  position relative
  overflow hidden

  &::before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 3px
    background $primary
    transform scaleX(0)
    transition transform $transition-base

  &:hover::before
    transform scaleX(1)

  &__icon
    width 56px
    height 56px
    margin 0 auto 12px
    flex-center()
    background $bg-pink
    border-radius 50%
    font-size 24px
    color $primary
    transition all $transition-base

  &:hover &__icon
    background $primary
    color #fff
    transform scale(1.1)

  &__title
    font-size $font-size-base
    font-weight bold
    margin-bottom 6px

  &__desc
    font-size $font-size-sm
    color $text-gray
    line-height 1.5

