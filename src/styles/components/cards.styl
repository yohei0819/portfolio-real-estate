.area-grid
  display grid
  grid-template-columns repeat(5, 1fr)
  gap 16px

  +tab()
    grid-template-columns repeat(3, 1fr)

  +sp()
    grid-template-columns repeat(2, 1fr)
    gap 10px

.area-card
  card-base()
  text-align center
  cursor pointer
  position relative

  &__image
    width 100%
    height 120px
    background-size cover
    background-position center
    background-color $bg-gray
    position relative
    overflow hidden

    &::after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.4))

  &__rank
    position absolute
    top 8px
    left 8px
    width 28px
    height 28px
    flex-center()
    background $primary
    color #fff
    font-size $font-size-sm
    font-weight bold
    border-radius 50%
    z-index 1

  &__name
    position absolute
    bottom 8px
    left 0
    right 0
    color #fff
    font-weight bold
    font-size $font-size-base
    text-shadow 0 1px 3px rgba(0,0,0,0.5)

  &__info
    padding 12px

  &__count
    font-size $font-size-sm
    color $text-gray

    span
      color $primary
      font-weight bold
      font-size $font-size-lg

